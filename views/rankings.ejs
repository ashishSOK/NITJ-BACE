

<div class="mb-6">
  <h1 class="hero-title text-iskcon-orange">Weekly Rankings</h1>
  <p class="text-sm text-muted">Top performers this week based on BG hours and seva completed.</p>
</div>

<% if (!rankings || !rankings.length) { %>
  <div class="card">
    <p class="text-gray-600">No rankings available yet.</p>
    <a href="/dashboard" class="btn btn-ghost mt-4">Back to Dashboard</a>
  </div>
<% } else { %>
  <div class="card overflow-x-auto">
    <table class="rank-table w-full">
      <thead>
        <tr>
          <th class="text-left">#</th>
          <th class="text-left">Name</th>
          <th class="text-left">Score</th>
          <th class="text-left">BG hrs</th>
          <th class="text-left">Sevas</th>
        </tr>
      </thead>
      <tbody>
        <% rankings.forEach(function(r, i) { %>
          <tr class="<%= i % 2 === 0 ? '' : 'bg-gray-50' %>">
            <td><%= i + 1 %></td>
            <td><%= r.name %></td>
            <td><%= r.score %></td>
            <td><%= r.bgHours %></td>
            <td><%= r.sevas %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="mt-4">
      <a href="/dashboard" class="btn btn-ghost">Back to Dashboard</a>
    </div>
  </div>
<% } %>
